<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.0.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_0_0.dtd">
<service-builder package-path="com.liferay.data.migration.tool">
	<author>Dylan Rebelak</author>
	<namespace>SYNC</namespace>

	<entity local-service="true" name="EntityManager" remote-service="false">
		<column name="entityName" primary="true" type="String" />

		<!-- started: Time of last completed sync for this entity -->

		<column name="lastSyncDate" type="Date" />
	</entity>

	<entity local-service="true" name="Migration" remote-service="false">
		<column name="migrationId" primary="true" type="long" />

		<!-- started: Time this run started -->

		<column name="timeStarted" type="Date" />

		<!-- completed: Time this run completed -->

		<column name="timeCompleted" type="Date" />

		<!-- fromDate: This is the date used to select all records changed from the given date. -->

		<column name="fromDate" type="Date" />

		<!-- recordsSynced: This is the count of records synced during this run -->

		<column name="recordsSynced" type="long" />

		<!-- Order by started date descending so the first record is our starting point for the next run -->

		<order by="desc">
			<order-column name="timeStarted" />
		</order>
	</entity>
</service-builder>